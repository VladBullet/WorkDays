@model HomeViewModel

<head>
    <link rel="stylesheet" href="~/css/HomePage.css" />
</head>

<div class="row">
    <div class="col-md-4"><div>Monday & Tuesday</div></div>
    <div class="col-md-4"></div>
    <div class="col-md-4"></div>
</div>
<div id="empSelectionMondayTuesday" class="row btn-group">
    @foreach (var emp in Model.Employees)
    {
        <div class="" style="padding: 5px;">
            <input type="checkbox" name="emp-checkboxes" value="@emp.Id" id="@(string.Format("empSelectionMondayTuesday{0}",emp.Id.ToString()))" />
            <label class="customLabel" for="@(string.Format("empSelectionMondayTuesday{0}",emp.Id.ToString()))" onselectstart="return false">@emp.FirstName @emp.LastName</label>
        </div>
    }
</div>